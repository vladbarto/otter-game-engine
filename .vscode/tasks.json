// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "g++-9 -fdiagnostics-color=always -g $(find ${workspaceFolder} -name '*.cpp') -o ${workspaceFolder}/main ${workspaceFolder}/app/glad.c -ldl -lglfw -lGL"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Task for building all C++ files in the project."
        }
    ]
}
